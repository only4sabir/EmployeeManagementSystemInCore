@model EMS_New.Model.Employee

@{
    ViewData["Title"] = "Create";
}


<h4>Add Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control cmpsl" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control cmpsl" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mobile" class="control-label"></label>
                <input asp-for="Mobile" class="form-control cmpsl Mobile" maxlength="10" />
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentId" class="control-label"></label>
                @*<select asp-for="DepartmentId" class="form-control cmpsl" asp-items="ViewBag.DepartmentId"></select>*@
                <select asp-for="DepartmentId" class="form-control cmpsl" asp-items="@(new SelectList(ViewBag.Dpt,"DepartmentId", "Name"))"></select>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" onclick="return checkValidation();" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
